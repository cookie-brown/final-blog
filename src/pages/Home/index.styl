.profile-image{
	width:100px;
	height:100px;
	margin: 0 auto;
	border-radius: 50%;
	overflow: hidden;
}

.profile-name{
	margin:15px 0;
	text-align: center;  /* 使h2里的文字居中 */
	font-weight: normal;
	color:rgb(115,161,196);
}

.profile-sum{
	text-align: center;
	display: flex;
	justify-content: space-between;
}

.profile-sum li{
	display: inline-block;
}

.profile-sum li span{
	display: block;
}

.profile-sum-name{
	margin-bottom: 10px;
	font-size: 12px;
	color: rgb(163,162,166);
}

.profile-sum-value{
	font-size: 30px;
}

.contactMe-link{
	display: block;
	width:100%;
	height:30px;
	margin:20px auto;
	text-align: center;  /* 里面的内容居中 */
	line-height: 30px;
	border-radius: 10px;
	background-color:rgb(115,161,196);
	color:white;
	font-size: 14px;
}

.contactMe-link:hover{
	cursor: pointer;
}

.profile-link{
	text-align: center;
}

.profile-link i{
	color:black;
}

.icon-github{
	margin-right: 40px;
}

.horizontal-split-line{
	width:100%;
	margin:30px 0 20px 0;
	border:0.5px solid rgb(163,162,166);
}

.profile-tags-content ul{
	height:50%;
	overflow: scroll;
}

.profile-tags-content li{
	width:80%;
	margin:20px auto 0 auto;
}

.profile-tags-value{
	float: right;
	display: block;
	width:20px;
	height:20px;
	border:1px solid rgb(238,239,244);
	background-color: rgb(238,239,244);
	text-align: center;
	line-height: 20px;
	font-size: 14px;
}

.home-content-list {
	height: calc(100% - 40px);
	overflow: auto;
}
